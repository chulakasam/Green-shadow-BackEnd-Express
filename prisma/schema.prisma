generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Field {
  fieldCode  String @id
  fieldName  String
  location   String
  fieldSize  Int
  fieldImg01 String
  fieldImg02 String
  crops      Crop[]
}

model Vehicle {
  LicenseNo   String  @id
  VehicleCode String  @unique
  Category    String
  Status      String
  FuelType    String
  Remark      String
  staffs      Staff[]
}

model MonitoringLog {
  LogCode     String @id
  date        String
  observation String
  LogImage    String
}

model Crop {
  cropId    String @id
  cropName  String
  cropImage String
  category  String
  season    String
  fieldCode String
  field     Field  @relation(fields: [fieldCode], references: [fieldCode], onDelete: Cascade)
}

model Staff {
  staffId    String  @id
  name       String
  position   String
  gender     String
  joinedDate String
  dob        String
  contactNo  Int
  email      String  @unique
  address    String
  LicenseNo  String
  vehicle    Vehicle @relation(fields: [LicenseNo], references: [LicenseNo], onDelete: Cascade, onUpdate: Cascade)
}
